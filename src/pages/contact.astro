---
import Base from "../layouts/BaseLayout.astro";
const FORMSPREE_ENDPOINT = "https://formspree.io/f/your-id";
---
<Base title="Contact â€” FiduFlow" description="Contactez-nous pour un diagnostic gratuit de 30 minutes.">
  <section class="max-w-3xl mx-auto px-4 py-16">
    <h1 class="font-display font-bold text-3xl">Contact</h1>
    <form action={FORMSPREE_ENDPOINT} method="POST" class="mt-8 grid gap-4">
      <label class="block"><span class="text-sm font-medium">Email</span><input type="email" required name="email" class="mt-1 w-full rounded-lg border px-3 py-2" /></label>
      <label class="block"><span class="text-sm font-medium">Message</span><textarea required name="message" rows="5" class="mt-1 w-full rounded-lg border px-3 py-2"></textarea></label>
      <button class="px-4 py-2 rounded-lg bg-ff-green text-ff-black font-semibold">Send</button>
    </form>
  </section>
</Base>