---
import clsx from "clsx";
const BASE = (import.meta.env.BASE_URL || "/");
const BASE_NORM = BASE.endsWith("/") ? BASE : BASE + "/";
const links = [
  { href: `${BASE_NORM}`, label: "Home" },
  { href: `${BASE_NORM}services`, label: "Services" },
  { href: `${BASE_NORM}pricing`, label: "Pricing" },
  { href: `${BASE_NORM}contact`, label: "Contact" },
];
---
<nav ...>
  <div ...>
    <a href={BASE_NORM} ...>
      <img src={`${BASE_NORM}favicon.svg`} width="28" height="28" alt="" />
      <span class="font-display font-bold text-lg tracking-tight">FiduFlow</span>
    </a>
    ...
    <a href={`${BASE_NORM}contact`} class={clsx("rounded-lg px-3 py-2 text-sm font-semibold text-white","bg-ff-blue hover:bg-ff-green transition-colors shadow-soft")}>
      Get a demo
    </a>
    ...
  </div>
</nav>
